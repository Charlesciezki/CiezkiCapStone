@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    ViewBag.Title = "Admin Control Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Control Page</title>
</head>
<body>
    <div>
        <h2>Admin Control Page</h2>
        @using (Html.BeginForm("Appointments", "Admin"))
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Appointments" class="btn btn-default" />
        }
        @using (Html.BeginForm("Index", "Inventory"))
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Inventory" class="btn btn-default" />
        }
        <a href="https://www.sandbox.paypal.com/"><button type="submit" class="btn btn-default">Pay Employees</button></a>
</div>
</body>
</html>

