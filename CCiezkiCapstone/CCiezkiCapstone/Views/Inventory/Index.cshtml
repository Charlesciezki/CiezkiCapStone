@model IEnumerable<CCiezkiCapstone.Models.InventoryModel>

@{
    ViewBag.Title = "Your Inventory";
    
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<center>
    <h2>SBO Inventory Tracker</h2>

    <p>
        @Html.ActionLink("Create New Inventory Item", "Create")
    </p>
    <p>
        Find the best products here:
        <a href="http://www.jondon.com/">http://www.jondon.com/</a>
    </p>
</center>
<table class="table">
    <tr>
        <th>
            <b>@Html.DisplayNameFor(model => model.productName)</b>
        </th>
        <th>
            <b>@Html.DisplayNameFor(model => model.price)</b>
</th>
        <th>
            <b>@Html.DisplayNameFor(model => model.quantity)</b>
</th>
        <th>
            <b>@Html.DisplayNameFor(model => model.warningLevel)</b>
</th>
        <th>
            <b>@Html.DisplayNameFor(model => model.refillLevel)</b>
</th>
        <th>
            <b>@Html.DisplayNameFor(model => model.url)</b>
</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.productName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.warningLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.refillLevel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.url)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
