@model CCiezkiCapstone.Models.InventoryModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<center>
    <h2>Create a product to keep track of</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.productName, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.productName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter product name here" } })
                    @Html.ValidationMessageFor(model => model.productName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.price, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter price of product here" } })
                    @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.quantity, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter amount in stock here" } })
                    @Html.ValidationMessageFor(model => model.quantity, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.warningLevel, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.warningLevel, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter level you will get email at" } })
                    @Html.ValidationMessageFor(model => model.warningLevel, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.refillLevel, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.refillLevel, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter an absolute refill amount" } })
                    @Html.ValidationMessageFor(model => model.refillLevel, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.url, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.url, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter product url here" } })
                    @Html.ValidationMessageFor(model => model.url, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-6">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</center>