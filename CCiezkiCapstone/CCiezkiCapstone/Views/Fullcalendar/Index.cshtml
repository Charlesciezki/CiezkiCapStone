@model IEnumerable<CCiezkiCapstone.Models.FullcalendarModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Fill out an appointment form</h2>

<p>
    @Html.ActionLink("Request an appointment", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.event_id }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.event_id }) 
            @*@Html.ActionLink("Delete", "Delete", new { id=item.event_id })*@
        </td>
    </tr>
}

</table>

